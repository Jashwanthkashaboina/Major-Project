<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <!-- here we made  2 diff cols like heading one col which occupies 8 cols -->
    <div class="col-8 offset-3"> 
        <h3><%=listing.title%></h3>
    </div>
    <!-- here for remaining content we made anothter col -->
    <div class="card col-6 offset-3 show-card"> 
        <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image" >
            <div class="card-body">
                <p class="card-text">
                    <br/>
                    <%=listing.description%><br/>
                    &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %><br/>
                    <%=listing.location%><br/>
                    <%=listing.country%><br/>
                </p>
            </div>
    </div>
    <br/>
    <div class="btns mt-3">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
        <br/><br/>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
    <hr/>
    <div class="col-8 offset-3 mb-3">
        <h4>Leave a Review</h4>
        <form action="/listings/<%=listing._id%>/reviews" method="POST">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea id="comment" name="review[comment]" cols="30" rows="5" class="form-control"></textarea>
            </div>
            <br/>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
    </div>
</div>