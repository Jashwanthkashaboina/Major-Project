<% layout("/layouts/boilerplate") -%>
<style>
    #filters {
        overflow: hidden;
        white-space: nowrap;
        position: relative;
        border-bottom: 1px solid #eee;
        padding: 0.5rem 0;
    }

    .filters-track {
        display: inline-flex;
        animation: scrollLeft 25s linear infinite;
    }

    .filters-track:hover {
        animation-play-state: paused; /* pause on hover */
    }

    .filter {
        text-align: center;
        margin: 0 1rem;
        opacity: 0.8;
    }

    .filter:hover {
        opacity: 1;
        transform: scale(1.05);
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .filter i {
        font-size: 1.2rem;
    }

    .filter p {
        font-size: 0.8rem;
    }

    /* Scrolling Animation */
    @keyframes scrollLeft {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

