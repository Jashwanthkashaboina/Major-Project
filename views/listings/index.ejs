<% layout("/layouts/boilerplate") -%>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        text-align: center;
        margin-left:1rem;
        opacity: 0.7;
        margin-top:  1rem;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .filter p{
        font-size: 0.8rem;
    }
    .tax-info{
        display: none;
    }
    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.5rem;
        padding: 1rem;
        margin-left: 1rem;
        display: flex;
        align-items: center;
    }
</style>
<div id="filters" class="collapse d-lg-flex flex-wrap">
    <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-city"></i></div>
        <p>Iconic Cities</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-water"></i></div>
        <p>Lake Front</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Mountains</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>snow</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-street-view"></i></div>
        <p>Steet View</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-vihara"></i></div>
        <p>Vilage</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>igloo</p>
    </div>
    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display Total after Taxes</label>
        </div>
    </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings){%>
        <a href="/listings/<%=listing._id%>" class="listing-link">
            <div class="card col listing-card" >
                <img src="<%= listing.image.url %>" class="card-img-top" 
                alt="<%= listing.title %>" 
                style="height: 20rem;">
                    <!-- To add effect on card when we hover over it -->
                <div class="card-img-overlay"></div>
                    <div class="card-body"> 
                        <p class="card-text">
                            <b><%= listing.title%></b><br/>
                            <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> /night
                            <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
                        </p>
                    </div>
            </div>
        </a>
    <%}%>
</div>



<script>
    let taxSwicth = document.getElementById("switchCheckDefault");
    taxSwicth.addEventListener("click",()=>{
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display = "inline";
            }
            else{
                info.style.display = "none";
            }
        }
    });
</script>